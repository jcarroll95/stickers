{
  "name": "stickerboards",
  "private": true,
  "version": "1.0.1",
  "description": "Stickerboards monorepo (API + Web) with shared tooling and documentation",
  "license": "MIT",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently --kill-others-on-fail -n api,web -c auto \"npm -w apps/api run dev\" \"npm -w apps/web run dev\"",
    "dev:api": "npm -w apps/api run dev",
    "dev:web": "npm -w apps/web run dev",

    "start:api": "npm -w apps/api run start",

    "test:web": "npm -w apps/web run test -- --run",

    "test:coverage:api": "npm --workspace apps/api run test:coverage",
    "coverage:api": "npm --workspace apps/api run test:coverage"

  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
